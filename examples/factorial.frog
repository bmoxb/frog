# Calculate the factorial of a given integer.
let factorial input : int -> int =
    # Recursive calls must be in the tail position so use an accumulator.
    let rec loop n acc : int int -> int =
        if n > 1 then
            loop (n - 1) (n * acc)
        else
            acc
    in
    loop input 1

let main : @in -> @out =
    @out "n = ";
    let input : int = @in in
    @out "n! = " (factorial input)
