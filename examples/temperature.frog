let c_to_f c : float -> float = 9.0 / 5.0 * c + 32.0

let f_to_c f : float -> float = (f - 32.0) * 5.0 / 9.0

let main : @in -> @out =
    @out "Enter temperature in celsius:";
    let read_c : int = @in in
    @out "Converted to fahrenheit:";
    @out (c_to_f read_c);
    @out "Enter temperature in fahrenheit:";
    let read_f : int = @in in
    @out "Converted to celsius:";
    @out (f_to_c read_f)
